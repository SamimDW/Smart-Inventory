<!-- res/values/themes.xml -->
<resources>
    <style name="Theme.SmartInventory" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Make status bar transparent so the toolbar blends under it -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- (optional) also make nav bar transparent if you like -->
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- If your app bar is dark, keep LIGHT icons on the status bar -->
        <item name="android:windowLightStatusBar">false</item>
        <!-- If your nav bar background is dark, keep LIGHT nav icons -->
        <item name="android:windowLightNavigationBar">false</item>

    </style>
</resources>
